<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>GameZone | @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap">
	<link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GameZone.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg bg-light mb-3" data-bs-theme="light">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-controller"></i> GameZone</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon bg-primary"></span>
				</button>
				<div class="navbar-collapse collapse">
					<ul class="navbar-nav flex-grow-1">
						@if (User.IsInRole("Admin"))
						{
							<li class="dropdown me-2 my-1">
								<button class="btn btn-outline-primary border-1 shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-gear"></i> Management
								</button>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" asp-controller="Games" asp-action="Index">
											<i class="bi bi-controller"></i> Games
										</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Category" asp-action="Create">
											<i class="bi bi-bookmark-check"></i> Category
										</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Role" asp-action="Create">
											<i class="bi bi-person-square"></i> Create Role
										</a>
									</li>
								</ul>
							</li>
						}
					</ul>
					@if (User.Identity.IsAuthenticated)
					{
						<button class="btn btn-outline-primary border-1 shadow-sm me-2 my-1">
							<i class="bi bi-person-badge"></i> Hello @User.Identity.Name
						</button>

						


						<form asp-controller="Account" asp-action="SignOut">
							<button class="btn btn-outline-danger border-1 shadow-sm my-1">
								<i class="bi bi-box-arrow-in-right"></i> Sign Out
							</button>
						</form>

					}
					else
					{
						<div class="d-flex justify-content-between" role="search">
							<form class="d-flex me-2" asp-controller="Home" asp-action="Index">
								<div class="input-group">
									<input name="searchStr" class="form-control bg-primary" type="search" placeholder="Search By Name..">
									<button class="btn btn-outline-secondary border-1 shadow-none" type="submit"><i class="bi bi-search"></i></button>
								</div>
							</form>
							<div>
								<a asp-action="Login" asp-controller="Account" class="btn btn-primary border-1 my-2 my-sm-0 bi bi-box-arrow-in-right me-2"> Login</a>
								<a asp-action="Registration" asp-controller="Account" class="btn btn-primary border-1 bi bi-person-plus my-2 my-sm-0"> Register</a>
							</div>
						</div>
					}
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - GameZone
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
